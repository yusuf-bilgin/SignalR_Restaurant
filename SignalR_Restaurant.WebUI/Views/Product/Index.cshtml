@model List<ResultProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ürün ile ilgili işlemleri buradan gerçekleştirebilirsiniz.
						</div>
						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Fiyat (₺)</th>
									<th scope="col">Kategori</th>
									<th scope="col">Durum</th>
								</tr>
							</thead>
							<tbody>
								@{
									int i = 1;
									@foreach (var item in Model)
									{
										<tr>
											<td hidden>@item.ProductId</td>
											<td>@i</td>
											<td>@item.Name</td>
											<td>@item.Price</td>
											<td>@item.CategoryName</td>
											<td>@item.Status</td>
											<td>
												<a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger btn-rounded"
												   onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?')">Sil</a>
											</td>
											<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-warning btn-rounded">Güncelle</a></td>
										</tr>
										i++;
									}
								}
							</tbody>
						</table>
						<div class="d-flex justify-content-md-center mt-3">
							<a href="/Product/CreateProduct/" class="btn btn-primary">Yeni Ürün Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

