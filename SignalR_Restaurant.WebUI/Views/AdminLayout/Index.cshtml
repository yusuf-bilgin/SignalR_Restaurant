@* Admin Layout (Layoutu null yani burası ana layout) *@

@{
	Layout = null;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("LayoutHeader")

<body>
	<div class="wrapper">
		@await Component.InvokeAsync("LayoutNavbar")
		@await Component.InvokeAsync("LayoutSidebar")

		<div class="main-panel">
			@RenderBody()
			@await Component.InvokeAsync("LayoutFooter")
		</div>
	</div>

	@await Component.InvokeAsync("LayoutScript")
</body>
</html>
