@model List<ResultBasketDto>
@{
	Layout = null;
	int count = 0;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("ClientHead")

<body class="sub_page">

	@await Component.InvokeAsync("ClientMenuNavbar")

	<!-- menu section -->
	<br />
	<div class="container-fluid">
		<div class="row pt-xl-5">
			<div class="col-12">
				<nav class="breadcrumb bg-dark mb-30">
					<a class="breadcrumb-item text-white" href="@Url.Action("Index", "Default")">Ana Sayfa</a> @* Url bu şekilde daha güvenli *@
					<a class="breadcrumb-item text-white" href="@Url.Action("Index", "ClientMenu")">Menü</a>
					<span class="breadcrumb-item active">Sepetim</span>
				</nav>
			</div>
		</div>
	</div>

	<div class="container-fluid">
		<div class="row px-xl-5">
			<div class="col-lg-8 table-responsive mb-5">
				<table class="table table-light table-borderless table-hover text-center mb-0">
					<thead class="thead-dark">
						<tr>
							<th>#</th>
							<th>Ürün</th>
							<th>Adet</th>
							<th>Fiyat</th>
							<th>Toplam Fiyat</th>
							<th>Sil</th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{
						count++;
						<tbody class="align-middle">
							<tr>
								<td class="align-middle">@count</td>
								<td class="align-middle">@item.ProductId</td>
								<td class="align-middle">@item.ProductQuantity</td>
								<td class="align-middle">@item.ProductPrice</td>
								<td class="align-middle">@item.TotalPrice</td>
								<td class="align-middle btn-delete">
									<button data-basketId="@item.BasketId" id="btnDeleteBasketId" class="btn btn-sm btn-danger"><i class="fa fa-times"></i>Sil</button>
								</td>
							</tr>
						</tbody>
					}
				</table>
			</div>
		</div>
	</div>

	@await Component.InvokeAsync("ClientFooter")
	@await Component.InvokeAsync("ClientScripts")

</body>

</html>
