@model List<ResultContactDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int i = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim alanı ile ilgili işlemleri buradan gerçekleştirebilirsiniz. Tema bütünlüğü için sadece bir tane hakkımızda alanı ekleyiniz!
						</div>
						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									i++;
									<tr>
										<td hidden>@item.ContactId</td>
										<td>@i</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Email</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-warning btn-rounded">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<div class="d-flex justify-content-md-center mt-3">
							<a href="/Contact/CreateContact/" class="btn btn-primary">Yeni İletişim Bölümü Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

