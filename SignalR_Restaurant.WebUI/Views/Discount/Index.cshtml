@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int i = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün indirimli ürünleri aşağıda listelenmektedir. Tema bütünlüğü için 2 adet indirimli ürün seçiniz.
						</div>
						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">İndirim Durumu</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									i++;
									<tr>
										<td hidden>@item.DiscountId</td>
										<td>@i</td>
										<td>@item.Title</td>
										<td>@item.Ratio</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-success btn-rounded">Durum</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-warning btn-rounded">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<div class="d-flex justify-content-md-center mt-3">
							<a href="/Discount/CreateDiscount/" class="btn btn-primary">Yeni İndirimli Ürün Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

