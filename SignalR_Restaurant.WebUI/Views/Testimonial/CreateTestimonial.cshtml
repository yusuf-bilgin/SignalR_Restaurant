@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Müşteri Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Müşteri Yorumu Ekleme Sayfası</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Müşteri adını giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Müşteri ünvanını giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Müşteri resim dosya yolunu giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Comment">Müşteri yorumunu giriniz</label>
								<input type="text" class="form-control" asp-for="Comment" id="Comment">
							</div>
						</div>
						
						<div class="card-action">
							<button class="btn btn-primary">Yorumu Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

