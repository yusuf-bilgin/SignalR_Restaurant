@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Hesap Güncelleme</div>
						</div>

						<input type="hidden" asp-for="SocialMediaId" />
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlığı giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="UrlIcon">Icon giriniz</label>
								<input type="text" class="form-control" asp-for="UrlIcon" id="UrlIcon">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Url">Linki giriniz</label>
								<input type="text" class="form-control" asp-for="Url" id="Url">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Hesabını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

