@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkımızda Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlığı giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
								<small id="title" class="form-text text-muted">Örn: Tatlı, İçecek</small>
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Görsel ekleyiniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklama giriniz</label>
								<textarea class="form-control" asp-for="Description" id="description" rows="5"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Bölümü Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

