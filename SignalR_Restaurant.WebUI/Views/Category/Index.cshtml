@* Category Index View *@

@model List<ResultCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int i = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili işlemleri buradan gerçekleştirebilirsiniz.
						</div>
						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durumu</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									i++;
									<tr>
										<td hidden>@item.CategoryId</td>
										<td>@i</td>
										<td>@item.Name</td>
										<td>@item.Status</td>
										<td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
										<td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-warning btn-rounded">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<div class="d-flex justify-content-md-center mt-3">
							<a href="/Category/CreateCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
