@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirimli Ürün Girişi</div>
						</div>
						<input type="hidden" asp-for="DiscountId" />
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Ürün adını giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Ratio">Ürün indirim oranını giriniz</label>
								<input type="text" class="form-control" asp-for="Ratio" id="Ratio">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Ürün görselini giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Ürün açıklamasını giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="Description">
								<small id="Description" class="form-text text-muted">Örn: Tatlı, İçecek</small>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

