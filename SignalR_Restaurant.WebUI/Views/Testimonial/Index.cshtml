@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int i = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Yorum Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Müşterilerin yaptığı yorumlar ile ilgili işlemleri gerçekleştirebilirsiniz.
						</div>
						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Durum</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									i++;
									<tr>
										<td hidden>@item.TestimonialId</td>
										<td>@i</td>
										<td>@item.Name</td>
										<td>@item.Status</td>
										<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
										<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-warning btn-rounded">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<div class="d-flex justify-content-md-center mt-3">
							<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Müşteri Yorumu Girişi</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

