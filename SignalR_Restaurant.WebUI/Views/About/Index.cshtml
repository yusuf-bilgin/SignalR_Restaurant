@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int i = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı ile ilgili işlemleri buradan gerçekleştirebilirsiniz. Tema bütünlüğü için sadece bir tane hakkımızda alanı ekleyiniz!
						</div>
						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									i++;
									<tr>
										<td hidden>@item.AboutId</td>
										<td>@i</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-warning btn-rounded">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<div class="d-flex justify-content-md-center mt-3">
							<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Bölümü Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

