@* Client Menu Page*@

@model List<ResultProductDto>
@{
	Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("ClientHead")

<body class="sub_page">

	@await Component.InvokeAsync("ClientMenuNavbar")

	<!-- menu section -->

	<section class="food_section layout_padding">
		<div class="container">
			<div class="heading_container heading_center">
				<h2>
					Menümüz
				</h2>
			</div>

			<ul class="filters_menu">
				<li class="active" data-filter="*">Tümü</li>
				<li data-filter=".burger">Hamburger</li>
				<li data-filter=".makarna">Makarna</li>
				<li data-filter=".salata">Salata</li>
				<li data-filter=".tatli">Tatlı</li>
				<li data-filter=".icecek">İçecek</li>
			</ul>

			<div class="filters-content">
				<div class="row grid">
					@foreach (var product in Model)
					{
						<div class="col-sm-6 col-lg-4 all burger">
							<div class="box">
								<div>
									<div class="img-box">
										<img src="@product.ImageUrl" alt="">
									</div>
									<div class="detail-box">
										<h5>
											@product.Name
										</h5>
										<p>
											@product.Description
										</p>
										<div class="options">
											<h6>
												@product.Price ₺
											</h6>
											<a href="#" onclick="showProductId(@product.ProductId)">
												<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 456.029 456.029">
													<path d="M345.6,338.862c-29.184,0-53.248,23.552-53.248,53.248s23.552,53.248,53.248,53.248 53.248-23.552,53.248-53.248S374.784,338.862,345.6,338.862z" />
													<path d="M439.296,84.91c-1.024,0-2.56-0.512-4.096-0.512H112.64l-5.12-34.304C104.448,27.566,84.992,10.67,61.952,10.67H20.48C9.216,10.67,0,19.886,0,31.15s9.216,20.48,20.48,20.48h41.472c2.56,0,4.608,2.048,5.12,4.608l31.744,216.064c4.096,27.136,27.648,47.616,55.296,47.616h212.992c26.624,0,49.664-18.944,55.296-45.056l33.28-166.4C457.728,97.71,450.56,86.958,439.296,84.91z" />
													<path d="M215.04,389.55c-1.024-28.16-24.576-50.688-52.736-50.688-29.696,1.536-52.224,26.112-51.2,55.296 1.024,28.16,24.064,50.688,52.224,50.688h1.024C193.536,443.31,216.576,418.734,215.04,389.55z" />
												</svg>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
			<div class="btn-box">
				<a href="">
					Devamını Gör
				</a>
			</div>
		</div>
	</section>

	@await Component.InvokeAsync("ClientFooter")
	@await Component.InvokeAsync("ClientScripts")

	<script>
		function showProductId(value) {
			var productId = value;
			$.ajax({
				type:'post',
				data: {item: productId},
				contentType: 'application/json',
				success: function(){
					swal({
						title: "Seçilen ürün id: " + productId,
						text: "Ürün sepetinize eklendi!",
						icon: "success",
						button: "Tamam",
					});
				}
			});
		}
	</script>
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</body>

</html>
